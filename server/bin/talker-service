#!/usr/bin/env ruby

$:.unshift File.dirname(__FILE__) + "/../lib"
require "rubygems"
require "talker"
require "amqp"

EM.run do
  AMQP.connect :host => 'localhost'
  
  service = Talker::Services::ConsoleLogger.new

  trap('INT') do
    service.stop
    AMQP.stop { EM.stop }
  end

  service.start
end