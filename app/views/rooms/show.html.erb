    <ul id="log_links" style="display: none">
      <li><%= link_to "Room Log", room_logs_path(@room), :title => "Browse chat logs for this room", :target => "_blank" %></li>
      <li><%= link_to "Rooms", rooms_path, :title => "Rooms", :accesskey => "r" %></li>
      <% if admin? %>
