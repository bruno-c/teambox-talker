- @title = "Settings"

- form_for @user, :url => settings_path do |f|
  = f.error_messages

  %h2 User Information
  %p
    = f.label :name
    = f.text_field :name
  %p
    = f.label :email
    = f.text_field :email
  %p
    = submit_tag "Update"

  %h2 Change Your Password
  %p
    = f.label :password
    = f.password_field :password
  %p
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  %p
    = submit_tag "Change password"
    or
    = link_to "Cancel", :back, :class => "cancel"
