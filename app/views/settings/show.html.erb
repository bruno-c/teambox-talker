<% @title = "Settings" %>

<% form_for @user, :url => settings_path do |f| %>
  <%= f.error_messages %>

  <div class="panel">
    <div class="header">
      <h3>User Information</h3>
    </div>
    <div class="content">
      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.check_box :livetyping %>
        <%= f.label :livetyping, "Enabled live-typing", :class => "inline" %>
      </p>
      <p>
        <%= submit_button "Update", :class => "icon ok" %>
      </p>
    </div>
  </div>

  <div class="panel">
    <div class="header">
      <h3>Change Your Password</h3>
    </div>
    <div class="content">
      <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </p>
      <p>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </p>
      <p>
        <%= submit_button "Change password", :class => "icon ok" %>
      </p>
    </div>
  </div>
<% end %>
