<% @title = "Send Invites" %>

<% form_tag invites_path do %>
  <p>
    <%= label_tag :invitees, "Enter the email addresses of the people you want to invite. One per line." %>
    <%= text_area_tag :invitees, params[:invitees], :class => "large", :rows => 10 %>
  </p>
  <p>
    <%= submit_button "Send Invites" %>
    or
    <%= link_to "Cancel", users_path, :class => "button negative" %>
  </p>
<% end %>