<h1>Editing plugin</h1>

<div class="sheet">
  <h2><%= @title = "New Plugin" %></h2>

  <% form_for @plugin, :html => { :class => "lw120" } do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_field :description, :size => 60 %>
    </p>
    <p>
      <%= f.label :source %>
      <%= f.text_area :source, :rows => 12, :cols => 60 %>
    </p>
    <p class="indent submit">
      <%= buttons "Create", :cancel_to => plugins_path %>
    </p>
  <% end %>
</div>
