<li id="<%= dom_id(plugin) %>" class="<%= plugin.installed?(@current_account) ? 'enabled' : 'disabled' %>">
  <div class="panel">
    <div class="header">
      <span class="author">
        <%= image_tag avatar_url(plugin.author), :alt => h(plugin.author.name) %> <%= h plugin.author.name %>
      </span>
      <h3><%= link_to h(plugin.name), [current_account, plugin], :accesskey => i+1 %></h3>
    </div>

    <div class="content">
      <% if plugin.description %>
        <p class="description">
          <%=h plugin.description %>
        </p>
      <% end %>
    </div>

    <div class="footer">
      <span class="actions">
        <% if current_account.plugins.include?(plugin) %>
          <%= link_to "Edit", edit_account_plugin_path(current_account, plugin) %>
          <%= link_to "Delete", [current_account, plugin], :class => "delete", :method => :delete, :confirm => "Are you sure?" %>
        <% end %>
        
        <span id="enable_<%= dom_id(plugin) %>" class="plugin_enable_flag">
          <%= install_plugin(plugin) %>
        </span>
      </span>
    </div>
  </div>
</li>